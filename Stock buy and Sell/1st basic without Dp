class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int min_price = prices[0];  // Start with first price
        int max_profit = 0;        // Initialize maximum profit
        
        for (int price : prices) {
            min_price = min(min_price, price);  // Track lowest price so far
            max_profit = max(max_profit, price - min_price);  // Track best profit
        }
        
        return max_profit;
    }
};
