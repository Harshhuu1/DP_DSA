#include <bits/stdc++.h> 

int jump(int i, vector<int> &heights,vector<int> &dp){
    if(i==0) return 0;
    if(dp[i]!=-1) return dp[i];
    int one=jump(i-1,heights,dp)+abs(heights[i]-heights[i-1]);
    int second=INT_MAX;
    if(i>1){
        second=jump(i-2,heights,dp)+abs(heights[i]-heights[i-2]);
        
    }
    return  dp[i]=min(one,second);}
int frogJump(int n, vector<int> &heights)
{
    // Write your code here.
    // vector<int> dp(n,0);
    // for(int i=1;i<n;i++){
    //     int one=dp[i-1]+abs(heights[i]-heights[i-1]);
    //     int two=INT_MAX;
    //     if(i>1){
    //     two=dp[i-2]+abs(heights[i]-heights[i-2]);
        
    //     }
    //     dp[i]=min(one,two);
    // }
    int prev=0;
    int prev2=0;
    for(int i=1;i<n;i++){
        int one=prev+abs(heights[i]-heights[i-1]);
        int two=INT_MAX;
        if(i>1){
            two=prev2+abs(heights[i]-heights[i-2]);
        }
        int curr=min(one,two);
        prev2=prev;
        prev=curr;
    }

    
    
    return prev;
}
