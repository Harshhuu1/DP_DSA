class Solution {
public:
    int t[505][505];
    int solve(string &s,string p, int n ,int m){
        for(int i=0;i<n+1;i++){
            for(int j=0;j<m+1;j++){
                if(i==0 || j==0) t[i][j]=0;
            }
        }
        for(int i=1;i<n+1;i++){
            for(int j=1;j<m+1;j++){
                if(s[i-1]==p[j-1])
                {
                    t[i][j]=1+t[i-1][j-1];
                }
                else
                t[i][j]=max(t[i-1][j],t[i][j-1]);
            }
        }
        return t[n][m];
        
    }
    int minInsertions(string s) {
        string r(s.rbegin(),s.rend());
        int lcs=solve(s,r,s.length(),s.length());
        return s.length()-lcs;
    }
};
